<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenback"
    tools:context=".created.CreateMyDActivity">

    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/imgDrawBoard"
        android:layout_width="400dp"
        android:layout_height="485dp"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCreateDTitle">

        <ImageView
            android:id="@+id/img_backdraw"
            android:layout_width="394dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="3dp"
            android:src="@drawable/backdraw" />
    </ja.burhanrashid52.photoeditor.PhotoEditorView>

    <TextView
        android:id="@+id/txtCreateDTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/createMyDTitle"
        android:textColor="@color/deepGreen"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgEyes"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imgNoses"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDrawBoard"
        app:srcCompat="@drawable/eyegray" />

    <ImageView
        android:id="@+id/imgNoses"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imgLips"
        app:layout_constraintTop_toBottomOf="@+id/imgDrawBoard"
        app:srcCompat="@drawable/nosegray" />

    <ImageView
        android:id="@+id/imgLips"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imgShapes"
        app:layout_constraintTop_toBottomOf="@+id/imgDrawBoard"
        app:srcCompat="@drawable/lipgray" />

    <!--    <ImageView-->
    <!--        android:id="@+id/imgLines"-->
    <!--        android:layout_width="45dp"-->
    <!--        android:layout_height="45dp"-->
    <!--        android:layout_marginTop="16dp"-->
    <!--        android:layout_marginEnd="8dp"-->
    <!--        app:layout_constraintEnd_toStartOf="@+id/imgShapes"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/imgDrawBoard"-->
    <!--        app:srcCompat="@drawable/linegray" />-->

    <ImageView
        android:id="@+id/imgShapes"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imgFrames"
        app:layout_constraintTop_toBottomOf="@+id/imgDrawBoard"
        app:srcCompat="@drawable/shapegray" />

    <ImageView
        android:id="@+id/imgFrames"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imgBackgrounds"
        app:layout_constraintTop_toBottomOf="@+id/imgDrawBoard"
        app:srcCompat="@drawable/framegray" />

    <ImageView
        android:id="@+id/imgBackgrounds"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imgDTools"
        app:layout_constraintTop_toBottomOf="@+id/imgDrawBoard"
        app:srcCompat="@drawable/backgroundgray" />

    <ImageView
        android:id="@+id/imgDTools"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDrawBoard"
        app:srcCompat="@drawable/drawgray" />

    <Button
        android:id="@+id/btnSaveCreateD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_bg_green"
        android:text="@string/btnSaveCreated"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btnShareCreateD"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgShapes" />

    <Button
        android:id="@+id/btnShareCreateD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/btn_bg_green"
        android:text="@string/btnShareCreated"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgShapes" />

</androidx.constraintlayout.widget.ConstraintLayout>